{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean"
            ],
            "group": "none"
        },
        {
            "label": "Prettier",
            "type": "shell",
            "command": "mvn",
            "args": [
                "prettier:write"
            ],
            "group": "none"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "mvn",
            "args": [
                "install",
                "-DskipTests",
                "-T",
                "2.0C"
            ],
            "group": "build"
        },
        {
            "label": "Install",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "install",
                "-f",
                "../pom.xml"
            ],
            "group": "build"
        },
        {
            "label": "Install Benchmark",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "install",
                "-P",
                "benchmark"
            ],
            "group": "build"
        },
        {
            "label": "Install Frontend",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "install",
                "-f",
                "../replacer-frontend/pom.xml"
            ],
            "group": "build"
        },
        {
            "label": "Run Offline",
            "type": "process",
            "command": "mvn",
            "args": [
                "spring-boot:run",
                "-P",
                "offline",
                "-f",
                "replacer-app/pom.xml"
            ],
            "group": "none",
            "dependsOn": "Build",
            "dependsOrder": "sequence"
        },
        {
            "label": "Run Offline Backend",
            "type": "process",
            "command": "mvn",
            "args": [
                "spring-boot:run",
                "-P",
                "offline,backend",
                "-f",
                "replacer-app/pom.xml"
            ],
            "group": "none",
            "dependsOn": "Build",
            "dependsOrder": "sequence"
        },
        {
            "label": "Run DB-Local",
            "type": "process",
            "command": "mvn",
            "args": [
                "spring-boot:run",
                "-P",
                "db-local",
                "-f",
                "replacer-app/pom.xml"
            ],
            "group": "none",
            "dependsOn": "Build",
            "dependsOrder": "sequence"
        },
        {
            "label": "Run DB-Local Backend",
            "type": "process",
            "command": "mvn",
            "args": [
                "spring-boot:run",
                "-P",
                "db-local,backend",
                "-f",
                "replacer-app/pom.xml"
            ],
            "group": "none",
            "dependsOn": "Build",
            "dependsOrder": "sequence"
        },
        {
            "label": "Run DB-Prod",
            "type": "process",
            "command": "mvn",
            "args": [
                "spring-boot:run",
                "-P",
                "db-prod",
                "-f",
                "replacer-app/pom.xml"
            ],
            "group": "none",
            "dependsOn": "Build",
            "dependsOrder": "sequence"
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "test"
            ],
            "group": "test"
        },
        {
            "label": "Test Finder",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "test",
                "-f",
                "replacer-finder/pom.xml"
            ],
            "group": "test"
        }
    ]
}