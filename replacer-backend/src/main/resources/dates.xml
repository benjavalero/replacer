<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/util
   		   http://www.springframework.org/schema/util/spring-util.xsd">

    <util:map id="monthNames" map-class="java.util.HashMap"
              key-type="java.lang.String" value-type="java.lang.String">
        <entry key="es"
               value="enero,febrero,marzo,abril,mayo,junio,julio,agosto,septiembre,setiembre,octubre,noviembre,diciembre"/>
        <entry key="gl" value="xaneiro,febreiro,marzo,abril,maio,xuÃ±o,xullo,agosto,setembro,outubro,novembro,decembro"/>
    </util:map>

    <util:map id="dateConnectors" map-class="java.util.HashMap"
              key-type="java.lang.String" value-type="java.lang.String">
        <entry key="es" value="a,desde,de,durante,el,entre,en,hacia,hasta,para,y"/>
        <entry key="gl" value="a,desde,dende,de,durante,o,entre,en,cara,ata,para,e"/>
    </util:map>

    <!-- The first preposition is the default one that will be added when missing -->
    <util:map id="yearPrepositions" map-class="java.util.HashMap"
              key-type="java.lang.String" value-type="java.lang.String">
        <entry key="es" value="de,del"/>
        <entry key="gl" value="de,do"/>
    </util:map>

    <!-- Words preceding a date to be added an article between.
         The list is actually a list of pairs with the word and the particle + article,
         so we can take apply contractions or replacements. -->
    <util:map id="dateArticles" map-class="java.util.HashMap"
              key-type="java.lang.String" value-type="java.lang.String">
        <entry key="es" value="a-al,desde-desde el,de-del,durante-durante el,entre-entre el,en-el,hacia-hacia-el,hasta-hasta el,y-y el"/>
    </util:map>
</beans>
